<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pyrech_cron.console.paths" type="collection">
            <parameter>app/console</parameter>
            <parameter>bin/console</parameter>
        </parameter>

        <parameter key="pyrech_cron.task.builder.class">Pyrech\Scheduling\TaskBuilder</parameter>
        <parameter key="pyrech_cron.formatter.crontab.class">Pyrech\Formatter\CrontabFormatter</parameter>
        <parameter key="pyrech_cron.scheduler.class">Pyrech\Scheduling\Scheduler</parameter>
    </parameters>

    <services>

        <service id="pyrech_cron.task.builder" class="%pyrech_cron.task.builder.class%">
            <argument>%kernel.root_dir%</argument>
            <argument>%pyrech_cron.console.paths%</argument>
        </service>

        <service id="pyrech_cron.formatter.default" class="%pyrech_cron.formatter.crontab.class%" />

        <service id="pyrech_cron.scheduler" class="%pyrech_cron.scheduler.class%">
            <argument type="service" id="pyrech_cron.formatter.default" />
        </service>

    </services>
</container>
